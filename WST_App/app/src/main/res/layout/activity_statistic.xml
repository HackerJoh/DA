<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statisticTitle"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Statistik"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="351dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mybutton"
            android:orientation="horizontal">

            <TextView
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bereits absolvierte Trainingsläufe:"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statsTraiAnz"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="4"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="351dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mybutton"
            android:orientation="horizontal">

            <TextView
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bereits absolvierte Prüfungsläufe:"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statsPrüfAnz"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="13"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="351dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mybutton"
            android:orientation="horizontal">

            <TextView
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rekordprozentzahl Prüfung:"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statsHigh"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="100%"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="351dp"
        android:layout_height="115dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mybutton"
            android:orientation="horizontal">

            <TextView
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="Durchschnittliche Anzahl beantworterter Fragen im Trainingsmodus:"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statsAvgAnz"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="23"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button3"
        android:layout_width="351dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/mybutton"
        android:onClick="backToMenu"
        android:padding="30px"
        android:text="Zurück"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endPoints"
        app:layout_constraintVertical_bias="0.146" />

</LinearLayout>
